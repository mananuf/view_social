{
    "mcpServers": {
        "figma": {
            "command": "uvx",
            "args": [
                "figma-mcp-server@latest"
            ],
            "env": {
                "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}",
                "FASTMCP_LOG_LEVEL": "ERROR"
            },
            "disabled": false,
            "autoApprove": []
        }
    }
}